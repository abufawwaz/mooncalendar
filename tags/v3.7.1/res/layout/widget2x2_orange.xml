<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget" android:background="@drawable/widget_background_orange"
	android:clickable="true" android:paddingTop="80dp" android:paddingLeft="55dp"
	android:paddingRight="55dp" android:paddingBottom="50dp"
	android:layout_width="230dp" android:layout_height="310dp"
	android:layout_gravity="center">

	<LinearLayout android:id="@+id/content"
		android:orientation="vertical" android:gravity="center_horizontal"

		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<LinearLayout android:id="@+id/layout_phone"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/widget_icon" android:src="@android:drawable/stat_notify_sync"
					android:scaleType="fitXY" android:layout_width="18dp"
					android:layout_height="18dp" />
				<TextView android:id="@+id/text_dday" android:text="@string/empty_str"
					android:textSize="16sp" android:textStyle="bold" android:gravity="center"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_message"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/text_title" android:text="@string/empty_str"
					android:textSize="14sp" android:gravity="left"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
				<TextView android:id="@+id/text_title2" android:text="@string/empty_str"
					android:textSize="12sp" android:gravity="left" android:visibility="gone"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_data"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/text_contents" android:text="@string/empty_str"
					android:textSize="14sp" android:gravity="center"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>