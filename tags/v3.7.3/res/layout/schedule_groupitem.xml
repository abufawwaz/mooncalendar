<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/schedule_group" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="horizontal"
	android:padding="5sp">
	<TextView android:id="@+id/schedule_date"
		android:layout_width="wrap_content" android:paddingLeft="30sp"
		android:textSize="11sp" android:gravity="center_vertical"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/rowidcolon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text=" : "
		android:layout_toRightOf="@id/schedule_date" />
	<TextView android:id="@+id/schedule_title"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/rowidcolon" android:textSize="20sp"
		android:maxLines="1" android:lines="1" android:ellipsize="end" />
</RelativeLayout>
