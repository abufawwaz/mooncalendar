<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget" android:background="@drawable/widget_background_transparent"
	android:clickable="true" android:paddingTop="28dp" android:paddingLeft="18dp"
		android:paddingRight="18dp" android:paddingBottom="18dp" android:layout_width="110dp"
	android:layout_height="150dp" android:layout_gravity="center">



	<LinearLayout android:id="@+id/content"
		android:orientation="vertical" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<LinearLayout android:id="@+id/layout_phone"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/widget_icon" android:src="@drawable/dday" android:scaleType="fitXY"
					android:layout_width="18dp" android:layout_height="18dp" />
				<TextView android:id="@+id/text_dday" android:text="@string/empty_str"
					android:textSize="12sp" android:textStyle="bold" android:gravity="right|center"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_message"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/text_title" android:text="@string/empty_str"
					android:textSize="10sp" android:textStyle="bold" android:gravity="right|center"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
				<TextView android:id="@+id/text_title2" android:text="@string/empty_str"
					android:textSize="12sp"  android:gravity="left" android:visibility="gone"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_data"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/text_contents" android:text="@string/empty_str"
					android:textSize="10sp" android:textStyle="bold" android:gravity="right|center"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>